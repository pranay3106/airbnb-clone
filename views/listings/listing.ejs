.hotel-pin {
  font-size: 30px;
  display: inline-block;
  animation: slideLeftRight 2s ease-in-out infinite;
  cursor: pointer;
}

@keyframes slideLeftRight {
  0%   { transform: translateX(0); }
  50%  { transform: translate(5px); }
  100% { transform: translatey(0); }
}

</style>

